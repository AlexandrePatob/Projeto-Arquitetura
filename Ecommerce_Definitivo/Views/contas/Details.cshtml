@model Ecommerce_Definitivo.Models.conta

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes da Conta</h2>

<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

      
        <dt>
           Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            CPF
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpf)
        </dd>

        <dt>
            Imagem
        </dt>

        <dd>

            <img src="@Url.Action("UserPhotos", "contas" )" class="ImagemProfile" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.contaId })     
</p>
