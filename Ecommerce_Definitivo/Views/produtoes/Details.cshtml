@model Ecommerce_Definitivo.Models.produto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    
    <hr />
    
    <dl class="dl-horizontal">
        <dt>
            Categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>

        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Preço
        </dt>

        <dd>
            @Html.DisplayFor(model => model.preco)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt>
           Imagem
        </dt>
        <dd>

            @if (Model.Imagem != null)
            {
                var base64 = Convert.ToBase64String(Model.Imagem);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.vitrine)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vitrine)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.produtoId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
